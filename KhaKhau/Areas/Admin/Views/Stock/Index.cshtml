@using KhaKhau.Models
@model IEnumerable<StockDisplayModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Stocks</h1>
<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form-control w-25" placeholder="Search by book" />
    <button type="submit" class="btn btn-primary mr-1">Find</button>
    
    <a asp-action="Index" asp-controller="Stock" class="btn btn-primary ml-3">Clear</a>
</form>

<table class="table table-bordered">
    <tr>
        <th>Product</th>
        <th>Stock</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td> 
            <td>@item.Quantity</td>
            <td>
                <a asp-action="ManangeStock" asp-controller="Stock" asp-route-productId="@item.ProductId" class="btn btn-info"> Update Stock</a>
            </td>
        </tr>
    }
</table>
 